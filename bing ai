
<head>
    <style>
        #container3 {
            width: 100%;
            background-color: #f8f9fa;
            padding: 10px;
            text-align: center;
            font-family: Arial, sans-serif;
        }
    </style>
</head>
<body>
    <div id="container3"></div>

    <script>
        var events = {
            "04-19": "Example Event 1",
            // Add more events in the format "MM-DD": "Event Name"
        };

        var date = new Date();
        var today = ("0" + (date.getMonth() + 1)).slice(-2) + "-" + ("0" + date.getDate()).slice(-2);
        var event = events[today];

        var container3 = document.getElementById('container3');
        container3.innerHTML = "<h2>Today's Date: " + today + "</h2>";
        if (event) {
            container3.innerHTML += "<h2>Today's Event: " + event + "</h2>";
        } else {
            container3.innerHTML += "<h2>No events today.</h2>";
        }
    </script>
</body>