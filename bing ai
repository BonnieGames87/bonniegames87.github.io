<!DOCTYPE html>
<html>
<head>
    <style>
        .container {
            position: absolute;
            top: 38px;
            left: 100px;
            width: 380px;
            height: 534px;
            padding: 16px;
            background-color: lime; /** 444 is the normal **/
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
        }

        .container h1 {
            position: absolute;
            top: 0px;
            left: 170px;
        }

        .calendar {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            grid-gap: 4px;
            position: absolute;
            top: 30px;
            bottom: 0;
            left: 0;
            right: 0;
        }

        .calendar div {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: center;
        }

        .today {
            background-color: #ff0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 id="monthYear"></h1>
        <div id="calendar" class="calendar"></div>
    </div>

    <script>
        var monthNames = ["January", "February", "March", "April", "May", "June",
          "July", "August", "September", "October", "November", "December"
        ];

        function updateCalendar() {
            var date = new Date();
            var month = date.getMonth();
            var year = date.getFullYear();
            var today = date.getDate();

            // Get the first day of the month
            var firstDay = new Date(year, month, 1).getDay();

            // Get the number of days in the month
            var daysInMonth = 32 - new Date(year, month, 32).getDate();

            // Update the month and year
            document.getElementById('monthYear').innerHTML = monthNames[month] + ' ' + year;

            // Create the calendar
            var calendar = document.getElementById('calendar');
            calendar.innerHTML = '';
            for (var i = 0; i < firstDay; i++) {
                calendar.innerHTML += '<div></div>';
            }
            for (var i = 1; i <= daysInMonth; i++) {
                if (i === today) {
                    calendar.innerHTML += '<div class="today">' + i + '</div>';
                } else {
                    calendar.innerHTML += '<div>' + i + '</div>';
                }
            }
        }

        // Update the calendar when the page loads
        updateCalendar();

        // Update the calendar every day at midnight
        setInterval(updateCalendar, 1000 * 60 * 60 * 24);
    </script>
</body>
</html>
