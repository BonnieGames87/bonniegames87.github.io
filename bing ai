
<body>
    <div class="container3">
        <div id="calendar">
            <div id="monthYear"></div>
            <table id="calendarTable">
                <!-- Your existing table structure -->
            </table>
        </div>
        <div id="countdown"></div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const monthYear = document.getElementById('monthYear');
            const calendarBody = document.getElementById('calendarBody');
            const countdown = document.getElementById('countdown');

            // Function to check if a day is a holiday or an event
            function isHolidayOrEvent(date) {
                const holidays = [
                    new Date(2023, 0, 1), // New Year's Day
                    // Add more holidays here
                ];
                const events = [
                    new Date(2023, 4, 23), // May 23rd
                    // Add more events here
                ];
                return holidays.some(holiday => holiday.toDateString() === date.toDateString()) ||
                       events.some(event => event.toDateString() === date.toDateString());
            }

            function updateCalendar() {
                // Your existing updateCalendar function
                // Modify the part where you set cell.textContent to also check if the day is a holiday or an event
                if (isHolidayOrEvent(new Date(year, month, day))) {
                    cell.classList.add('holiday'); // or 'event' if it's an event
                }
            }

            function calculateCountdown() {
                const now = new Date();
                const targetDate = new Date(now.getFullYear(), 4, 23); // May 23rd
                if (now > targetDate) {
                    targetDate.setFullYear(targetDate.getFullYear() + 1);
                }
                let countdownDate = new Date(targetDate);
                while (isHolidayOrEvent(countdownDate) || countdownDate.getDay() === 0 || countdownDate.getDay() === 6) {
                    countdownDate.setDate(countdownDate.getDate() + 1);
                }
                const diff = countdownDate - now;
                const days = Math.ceil(diff / (1000 * 60 * 60 * 24));
                countdown.textContent = `Countdown to May 23rd: ${days} days`;
            }

            updateCalendar();
            calculateCountdown();
        });
    </script>
</body>


